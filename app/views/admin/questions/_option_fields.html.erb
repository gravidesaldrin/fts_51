<div class = "option_fields">
  <div class="fields form-inline">
    <div class="input-group col-sm-5">
      <%= f.text_field :content, class: "form-control", placeholder: t(".content")%>
    </div>
    <%= f.check_box :correct, class: "form-control correct-field" %>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :_destroy, class: "removable" %>
    <%= link_to_remove_fields t(".remove"), f, "btn btn-danger del-button" %>
    <div> &nbsp; </div>
  </div>
</div>
