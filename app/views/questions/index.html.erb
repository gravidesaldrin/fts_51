<% provide :title, t(".title") %>
<div class="panel panel-default panel-table">
  <div class="panel-heading">
    <div class="row">
      <div class="col col-xs-6">
        <h3 class="panel-title"><%= t ".title" %></h3>
      </div>
      <div class="col-md-6 text-right">
        <%= form_tag(questions_path, {:method => :get}) do %>
          <%= label_tag :category_id %>
          <%= select_tag(:category_id,
            options_from_collection_for_select(@categories, "id", "name",
            {selected: params[:category_id]})) %>
          <% %w[all learned unlearned].each do |filter| %>
            <%= radio_button_tag "filter", filter, filter == params[:filter],
              :checked => filter == "all" %>
            <%= filter.humanize %>
          <% end %>
          <br/>
          <button type="submit" class="btn btn-sm btn-primary
            custom-button-width .navbar-right"><%= t ".filter" %></button>
        <% end %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-list">
      <thead>
        <tr>
          <th><%= t ".category" %></th>
          <th><%= t ".question" %></th>
          <th><%= t ".answer" %></th>
        </tr>
      </thead>
      <% if not @questions.blank? %>
        <tbody class="questions">
          <%= render @questions %>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class="panel-footer">
    <%= paginate @questions %>
  </div>
</div>

