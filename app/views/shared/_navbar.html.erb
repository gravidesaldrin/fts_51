<div id="top-nav" class="navbar navbar-inverse navbar-fixed-static">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle"
        data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <strong>
        <%= link_to t(".title"), root_path, {class: "navbar-brand"} %>
      </strong>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", role: "button",
              "data-toggle": "dropdown" do %>
              <i class="glyphicon glyphicon-user"></i>
              <%= current_user.name %>
            <% end %>
            <ul id="g-account-menu" class="dropdown-menu" role="menu">
              <li><%= link_to t(".my_profile"), current_user %></li>
              <li><%= link_to t(".update_profile"), edit_user_registration_path(current_user) %> </li>
            </ul>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: "delete" do %>
              <i class="glyphicon glyphicon-lock"></i>
              <%= t ".log_out" %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to "#" do %>
              <i class="glyphicon glyphicon-user"></i>
              <%= t ".guest" %>
            <% end %>
          </li>
          <li>
          <%= link_to new_user_session_path do %>
            <i class="glyphicon glyphicon-lock"></i>
            <%= t ".log_in" %>
          <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
