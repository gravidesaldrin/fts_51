<div class="col-sm-3">
  <% if user_signed_in? %>
    <%= link_to "#" do %>
      <strong><i class="glyphicon glyphicon-list">
      </i> <%= @user.name %> </strong>
    <% end %>
    <hr>
    <ul class="nav nav-stacked">
      <ul class="nav nav-stacked collapse in" id="userMenu">
        <li class = <%= "active" if
          for_user_path? controller_name, action_name %> >
          <%= link_to @user do %>
            <i class="glyphicon glyphicon-user"></i>
            <%= t ".profile" %>
          <% end %>
        </li>
        <li class = <%= "active" if current_page? categories_path %> >
          <%= link_to categories_path do %>
            <i class="glyphicon glyphicon-ok"></i>
            <%= t ".activities" %>
          <% end %>
        </li>
        <li class = <%= "active" if
          for_user_path?(controller_name, action_name, params[:active]) and
          params[:active] == "followers" %> >
          <%= link_to relationships_path recent_user: @user,
            active: "followers" do %>
            <i class="glyphicon glyphicon-star"></i>
            <%= t ".followers"%>
            <span class="badge badge-info">
              <strong id="followers" class="stat">
                <%= @user.followers.count %>
              </strong>
            </span>
          <% end %>
        </li>
        <li class = <%= "active" if
          for_user_path?(controller_name, action_name, params[:active]) and
          params[:active] == "following" %> >
          <%= link_to relationships_path recent_user: @user,
            active: "following" do %>
            <i class="glyphicon glyphicon-star-empty"></i>
            <%= t ".following"%>
            <span class="badge badge-info">
              <strong id="following" class="stat">
                <%= @user.following.count %>
              </strong>
            </span>
          <% end %>
        </li>
      </ul>
    </ul>
    <hr>
  <% end %>
  <ul class="nav nav-stacked">
    <li class = <%= "active" if current_page? root_path %> >
      <%= link_to t(".home"), root_path, {title: "Home"} %>
    </li>
    <li class = <%= "active" if current_page? about_path %> >
      <%= link_to t(".about"), about_path %>
    </li>
    <li class = <%= "active" if current_page? help_path %> >
      <%= link_to t(".help"), help_path %>
    </li>
    <li class = <%= "active" if current_page? contact_path %> >
      <%= link_to t(".contact"), contact_path %>
    </li>
  </ul>
  <hr>
</div>
